        <shape
            android:shape="rectangle" >
            <stroke
                android:width="4dp"
                android:color="#ffffff" />
            <solid
                android:color="@color/teal_200" />
        </shape>
    </item>


    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#ffffff" />
            <solid
                android:color="#000000"/>
        </shape>
    </item>

</selector>

